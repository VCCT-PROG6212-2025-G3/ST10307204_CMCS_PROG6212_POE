@{
    ViewData["Title"] = "Welcome to CMCS";
}

<section class="hero text-center text-white">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4">CMCS</h1>
                <h2 class="display-5 mb-4">Contract Monthly Claim System </h2>
                <p class="lead mb-5">A seamless, secure, and modern platform for lecturers to submit monthly claims and administrators to process them efficiently.</p>

                <div class="d-grid gap-3 d-sm-flex justify-content-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-5 py-3 shadow-lg">
                        <i class="fas fa-sign-in-alt me-3"></i> Login to Dashboard
                    </a>
                </div>

                <div class="mt-5">
                    <small class="text-white-50">
                        <i class="fas fa-shield-alt me-2"></i> Secure • Fast • User-Friendly
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-5 text-center">
            <div class="col-md-4">
                <div class="feature-icon text-primary mb-3"><i class="fas fa-upload fa-3x"></i></div>
                <h4>Easy Submission</h4>
                <p>Submit claims with drag & drop document upload in one step.</p>
            </div>
            <div class="col-md-4">
                <div class="feature-icon text-success mb-3"><i class="fas fa-check-double fa-3x"></i></div>
                <h4>Smart Workflow</h4>
                <p>Automated verification and approval with clear status tracking.</p>
            </div>
            <div class="col-md-4">
                <div class="feature-icon text-info mb-3"><i class="fas fa-lock fa-3x"></i></div>
                <h4>Secure & Private</h4>
                <p>Bank-level encryption and role-based access control.</p>
            </div>
        </div>
    </div>
</section>