@{
    ViewData["Title"] = "Welcome to CMCS";
}

<section class="hero mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Streamline Your Monthly Claims</h1>
        <p class="lead mb-4">A seamless platform for lecturers to submit claims and administrators to approve them efficiently.</p>
        <a href="@Url.Action("LecturerDashboard", "Home")" class="btn btn-light btn-lg me-3 shadow-sm">
            <i class="fas fa-user-edit me-2"></i> Get Started as Lecturer
        </a>
        <a href="@Url.Action("ManagerDashboard", "Home")" class="btn btn-warning btn-lg shadow-sm">
            <i class="fas fa-lock me-2"></i> Admin Login
        </a>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5 fw-bold">Key Features</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-clock feature-icon"></i>
                    <h5 class="fw-bold">Quick Submissions</h5>
                    <p>Submit claims anytime with a single click.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-upload feature-icon"></i>
                    <h5 class="fw-bold">Document Upload</h5>
                    <p>Securely attach supporting files effortlessly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center p-4">
                    <i class="fas fa-chart-line feature-icon"></i>
                    <h5 class="fw-bold">Real-Time Tracking</h5>
                    <p>Monitor claim status transparently until settlement.</p>
                </div>
            </div>
        </div>
    </div>
</section>
