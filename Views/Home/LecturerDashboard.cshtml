@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="row g-4">
    <!-- Left Column -->
    <div class="col-md-7">
        <div class="alert alert-info d-flex align-items-center shadow-sm" role="alert">
            <i class="fas fa-info-circle me-2 fs-5"></i>
            <div>
                <strong>Welcome back, John Doe!</strong> <br>
                Your next claim is ready to submit.
            </div>
        </div>

        <!-- Submit Claim Card -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Submit Monthly Claim</h4>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fas fa-clock me-1"></i> Hours Worked</label>
                        <input type="number" class="form-control" placeholder="e.g., 40" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fas fa-dollar-sign me-1"></i> Hourly Rate</label>
                        <input type="number" class="form-control" placeholder="e.g., 25.00" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold"><i class="fas fa-sticky-note me-1"></i> Additional Notes</label>
                        <textarea class="form-control" rows="3" placeholder="Describe your work..." disabled></textarea>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg w-100" disabled>
                        <i class="fas fa-paper-plane me-2"></i> Submit Claim
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-md-5">
        <!-- Upload Documents -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-upload me-2"></i>Upload Supporting Documents</h5>
            </div>
            <div class="card-body">
                <input type="file" class="form-control mb-3" disabled multiple accept=".pdf,.docx,.xlsx">
                <button class="btn btn-primary w-100 mb-3" disabled>
                    <i class="fas fa-cloud-upload-alt me-2"></i> Upload Files
                </button>
                <small class="text-muted d-block mb-2">Accepted: PDF, DOCX, XLSX (Max 5MB)</small>
                <hr>
                <p class="mb-1 fw-bold">Uploaded Files:</p>
                <span class="badge bg-secondary rounded-pill px-3 py-2">Timesheet.pdf</span>
            </div>
        </div>

        <!-- Claim Status Tracker -->
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Claim Status Tracker</h5>
            </div>
            <div class="card-body">
                <p><strong>Claim ID:</strong> CMCS-001</p>
                <div class="progress mb-3" style="height: 25px;">
                    <div class="progress-bar bg-info progress-bar-striped progress-bar-animated"
                         role="progressbar" style="width: 50%">
                        In Review
                    </div>
                </div>
                <p class="text-muted mb-1"><i class="fas fa-calendar-alt me-1"></i> Last Updated: 2025-09-15</p>
                <span class="badge bg-secondary fs-6 px-3 py-2">Pending Coordinator</span>
            </div>
        </div>
    </div>
</div>
