@model List<ClaimModel>
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="card shadow-sm" style="border-left: 5px solid #28a745; background: linear-gradient(to right, rgba(255, 255, 255, 0.9), rgba(40, 167, 69, 0.05));">
    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center" style="border-bottom: 2px dashed rgba(255, 255, 255, 0.3);">
        <h2 class="mb-0"><i class="fas fa-shield-alt me-2"></i> Manager Command Center</h2>
        <span class="badge bg-light text-dark">@Model.Count Pending</span>
    </div>
    <div class="card-body">
        <p class="text-muted mb-4">As a Manager, finalize claim approvals or rejections. Review verified claims and ensure compliance with policies.</p>
        <!-- Search Bar -->
        <div class="input-group mb-4 shadow-sm" style="background: rgba(40, 167, 69, 0.05); border-radius: 10px;">
            <input type="search" class="form-control rounded-start-pill" placeholder="Search claims..." style="background: none; border: none;">
            <button class="btn btn-outline-success rounded-end-pill" type="button" style="border-color: #28a745;">
                <i class="fas fa-filter"></i> Filter
            </button>
        </div>

        <!-- Claims Table -->
        <div class="table-responsive">
            <table class="table align-middle table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Hours</th>
                        <th>Amount</th>
                        <th>Submitted</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>John Doe <br><small class="text-muted">john@example.com</small></td>
                            <td>@claim.HoursWorked</td>
                            <td>$@(claim.HoursWorked* claim.HourlyRate)</td>
                            <td>2025-09-10</td>
                            <td><span class="badge bg-warning text-dark px-3 py-2">@claim.Status</span></td>
                            <td class="text-center">
                                <form asp-action="Index" method="post">
                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                    <div class="btn-group">
                                        <button type="submit" name="action" value="Approve" class="btn btn-success btn-sm rounded-pill px-3"><i class="fas fa-check"></i></button>
                                        <button type="submit" name="action" value="Reject" class="btn btn-danger btn-sm rounded-pill px-3"><i class="fas fa-times"></i></button>
                                        <button type="submit" name="action" value="View" class="btn btn-info btn-sm rounded-pill px-3"><i class="fas fa-eye"></i></button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Pagination">
            <ul class="pagination justify-content-center" style="border-top: 1px solid #28a745;">
                <li class="page-item disabled"><a class="page-link" href="#" style="color: #28a745;">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#" style="background: #28a745; border-color: #28a745;">1</a></li>
                <li class="page-item"><a class="page-link" href="#" style="color: #28a745;">Next</a></li>
            </ul>
        </nav>
    </div>
</div>