<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CMCS - @ViewData["Title"]</title>

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">


    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --info-gradient: linear-gradient(135deg, #43cea2 0%, #18d2ae 100%);
            --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        body {
            background: linear-gradient(to bottom, #f0f2f5, #ffffff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .navbar {
            background: var(--primary-gradient) !important;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            padding: 0.8rem 0;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 600;
            transition: all 0.3s;
            border-radius: 50px;
            padding: 0.5rem 1.2rem !important;
        }

            .nav-link:hover {
                background: rgba(255,255,255,0.2);
                transform: translateY(-2px);
            }

        .user-greeting {
            background: rgba(255,255,255,0.15);
            border-radius: 50px;
            padding: 0.5rem 1rem;
            backdrop-filter: blur(10px);
        }

        .hero {
            padding: 100px 0;
            background: var(--primary-gradient);
            color: white;
            text-align: center;
            border-radius: 0 0 60px 60px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            }

        .btn-primary {
            background: var(--success-gradient);
            border: none;
            padding: 12px 30px;
            border-radius: 50px;
            font-weight: 600;
        }

        .btn-success {
            background: var(--success-gradient);
            border: none;
        }

        .btn-info {
            background: var(--info-gradient);
            border: none;
        }

        .btn-warning {
            background: var(--warning-gradient);
            border: none;
        }

        footer {
            margin-top: auto;
            padding: 2rem 0;
            background: #2c3e50;
            color: #ecf0f1;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Dynamic Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/">
                <i class="fas fa-university me-2"></i> CMCS
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    @if (Context.Session.GetString("Role") != null)
                    {
                        <!-- User Greeting -->
                        <li class="nav-item me-3">
                            <span class="user-greeting text-white">
                                <i class="fas fa-user-circle me-2"></i>
                                @Context.Session.GetString("FullName")
                                <small class="ms-2 badge bg-light text-dark">@Context.Session.GetString("Role")</small>
                            </span>
                        </li>

                        <!-- LECTURER MENU -->
                        @if (Context.Session.GetString("Role") == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Index" asp-controller="Lecturer">
                                    <i class="fas fa-home me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="SubmitClaim" asp-controller="Lecturer">
                                    <i class="fas fa-plus-circle me-1"></i> New Claim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="TrackClaim" asp-controller="Lecturer">
                                    <i class="fas fa-list-alt me-1"></i> My Claims
                                </a>
                            </li>
                        }

                        <!-- COORDINATOR MENU -->
                        @if (Context.Session.GetString("Role") == "Coordinator")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Index" asp-controller="Coordinator">
                                    <i class="fas fa-clipboard-check me-1"></i> Verify Claims
                                </a>
                            </li>
                        }

                        <!-- MANAGER MENU -->
                        @if (Context.Session.GetString("Role") == "Manager")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Index" asp-controller="Manager">
                                    <i class="fas fa-thumbs-up me-1"></i> Approve Claims
                                </a>
                            </li>
                        }

                        <!-- HR MENU -->
                        @if (Context.Session.GetString("Role") == "HR")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="Index" asp-controller="HR">
                                    <i class="fas fa-home me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="AddLecturer" asp-controller="HR">
                                    <i class="fas fa-users-cog me-1"></i> Add Lecturer
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="HR" asp-action="Lecturers">
                                    <i class="fas fa-users me-1"></i> Manage Lecturers
                                    </a>
                            </li>

                        }

                        <!-- Logout -->
                        <li class="nav-item ms-3">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-light btn-sm rounded-pill px-4">
                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <!-- Not logged in -->
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-2"></i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-shrink-0">
        <div class="container py-4">
            <!-- Alerts -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm">
                    <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="mt-auto">
        <div class="container text-center">
            <p class="mb-0">
                © @DateTime.Now.Year <strong>CMCS</strong> – Claim Management & Coordination System
                <br><small class="text-muted">Secure • Modern • Efficient</small>
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>