@model ClaimModel
@{
    var role = ViewBag.Role ?? "Coordinator";
}

<div class="modal-header @(role == "Coordinator" ? "bg-info" : "bg-success") text-white">
    <h5 class="modal-title"><i class="fas fa-file-alt me-2"></i> Claim #@Model.ClaimId - Full Details</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <p><strong>Lecturer:</strong> @Model.User.FirstName @Model.User.LastName</p>
            <p><strong>Email:</strong> @Model.User.Email</p>
            <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
            <p><strong>Hourly Rate:</strong> R @Model.HourlyRate.ToString("N2")</p>
            <p><strong>Total Amount:</strong> <strong class="text-primary">R @Model.TotalAmount.ToString("N2")</strong></p>
            <p><strong>Status:</strong> <span class="badge bg-@(Model.Status == "Approved" ? "success" : Model.Status == "Verified" ? "info" : "warning")">@Model.Status</span></p>
        </div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <p><strong>Notes:</strong></p>
                <p class="border rounded p-3 bg-light">@Model.Notes</p>
            }
            <p><strong>Supporting Documents:</strong></p>
            @if (Model.Documents.Any())
            {
                <div class="list-group">
                    @foreach (var doc in Model.Documents)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-file-pdf text-danger"></i> @doc.FileName</span>
                            <small class="text-muted">@(doc.FileSize / 1024) KB</small>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No documents attached</p>
            }
        </div>
    </div>

    <hr class="my-4">

    <form asp-action="@(role == "Coordinator" ? "Verify" : "Approve")" method="post" class="text-center">
        <input type="hidden" name="claimId" value="@Model.ClaimId" />
        <button type="submit" name="action" value="@(role == "Coordinator" ? "Verify" : "Approve")"
                class="btn btn-success btn-lg px-5">
            <i class="fas fa-check me-2"></i> @(role == "Coordinator" ? "Verify & Send to Manager" : "Approve Claim")
        </button>
        <button type="submit" name="action" value="Reject" class="btn btn-danger btn-lg px-5">
            <i class="fas fa-times me-2"></i> Reject Claim
        </button>
    </form>
</div>