@model IEnumerable<CMCS_PROG6212_POE.Models.ClaimModel>
@{
    ViewData["Title"] = "Approved Claims - Individual Invoices";
}

<div class="container-fluid py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-success">
            <i class="fas fa-file-invoice-dollar me-3"></i>
            Approved Claims Ready for Payment
        </h1>
        <p class="lead">Download individual payment invoice for each approved claim</p>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
            <h3>No approved claims at this time</h3>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var claim in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card shadow-sm h-100 border-start border-success border-5">
                        <div class="card-body text-center">
                            <h5 class="card-title">
                                @claim.User.FirstName @claim.User.LastName
                            </h5>
                            <p class="text-muted">@claim.User.Email</p>
                            <hr>
                            <p><strong>Hours:</strong> @claim.HoursWorked</p>
                            <p>
                                <strong>Amount:</strong>
                                <span class="text-success fs-4 fw-bold">R @claim.TotalAmount</span>
                            </p>
                            <p><small>Submitted: @claim.SubmittedDate</small></p>

                            <a asp-action="DownloadClaimInvoice"
                               asp-route-claimId="@claim.ClaimId"
                               class="btn btn-danger btn-lg px-4">
                                <i class="fas fa-file-pdf me-2"></i>
                                Download Invoice
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>