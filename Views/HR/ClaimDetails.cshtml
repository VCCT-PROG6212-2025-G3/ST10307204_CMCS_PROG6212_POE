@model CMCS_PROG6212_POE.Models.ClaimModel
@{
    ViewData["Title"] = "Claim Details - #" + Model.ClaimId;
}

<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header d-flex justify-content-between align-items-center
                    @(Model.Status == "Approved" ? "bg-success" :
                                   Model.Status == "Verified" ? "bg-info" :
                                   Model.Status == "Pending" ? "bg-warning text-dark" : "bg-danger") text-white">
            <h3 class="mb-0">
                Claim #@Model.ClaimId - @Model.User.FirstName @Model.User.LastName
            </h3>
            <span class="badge bg-white text-dark fs-5 px-4 py-2">
                @Model.Status
            </span>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-user me-2"></i> Lecturer Details</h5>
                    <hr>
                    <p><strong>Name:</strong> @Model.User.FirstName @Model.User.LastName</p>
                    <p><strong>Email:</strong> @Model.User.Email</p>
                    <p><strong>Role:</strong> Lecturer</p>
                </div>
                <div class="col-md-6">
                    <h5><i class="fas fa-clock me-2"></i> Claim Details</h5>
                    <hr>
                    <p><strong>Hours Worked:</strong> @Model.HoursWorked hours</p>
                    <p><strong>Hourly Rate:</strong> R @Model.HourlyRate</p>
                    <p>
                        <strong>Total Amount:</strong>
                        <span class="text-success fs-4 fw-bold">R @Model.TotalAmount</span>
                    </p>
                    <p>
                        <strong>Submitted On:</strong>
                        @Model.SubmittedDate.ToString("dddd, dd MMMM yyyy 'at' HH:mm")
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <p><strong>Notes:</strong> <em>@Model.Notes</em></p>
                    }
                </div>
            </div>

            <!-- Approval Status Section — Only Show What's Relevant -->
            @if (Model.Approval != null)
            {
                <hr class="my-5">
                <h5><i class="fas fa-check-double me-2"></i> Approval Status</h5>

                @if (Model.Status == "Pending")
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-hourglass-half me-2"></i>
                        This claim is awaiting verification by the Coordinator.
                    </div>
                }
                else if (Model.Status == "Verified")
                {
                    <div class="alert alert-info">
                        <i class="fas fa-check me-2"></i>
                        <strong>Verified By:</strong>
                        @(Model.Approval.VerifiedBy != null
                                        ? $"{Model.Approval.VerifiedBy.FirstName} {Model.Approval.VerifiedBy.LastName} (Coordinator)"
                                        : "Coordinator")
                <br><small>On: @Model.Approval.VerifiedDate?.ToString("dd MMM yyyy HH:mm")</small>
            </div>
            <div class="alert alert-light border">
                <i class="fas fa-clock me-2"></i>
                Awaiting final approval from Manager.
            </div>
                        }
                else if (Model.Status == "Approved")
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Fully Approved</strong>
                    </div>
                    @if (Model.Approval.VerifiedBy != null)
                    {
                        <p class="mb-2">
                            <strong>Verified By:</strong>
                            @Model.Approval.VerifiedBy.FirstName @Model.Approval.VerifiedBy.LastName (Coordinator)
                            <small class="text-muted">
                                @Model.Approval.VerifiedDate?.ToString("dd MMM yyyy HH:mm")
                            </small>
                        </p>
                    }
                    @if (Model.Approval.ApprovedBy != null)
                    {
                        <p class="mb-0">
                            <strong>Approved By:</strong>
                            @Model.Approval.ApprovedBy.FirstName @Model.Approval.ApprovedBy.LastName (Manager)
                            <small class="text-muted">
                                @Model.Approval.ApprovedDate?.ToString("dd MMM yyyy HH:mm")
                            </small>
                        </p>
                    }
                }
            }
            else if (Model.Status == "Pending")
            {
                <hr class="my-5">
                <div class="alert alert-light border">
                    <i class="fas fa-info-circle me-2"></i>
                    No approval record yet — claim is pending verification.
                </div>
            }

            <!-- Action Buttons -->
            <hr class="my-5">
            <div class="d-flex gap-3">
                @if (Model.Status == "Approved")
                {
                    <a asp-action="DownloadClaimInvoice"
                       asp-route-claimId="@Model.ClaimId"
                       class="btn btn-danger btn-lg">
                        <i class="fas fa-file-pdf me-2"></i> Download Payment Invoice
                    </a>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="fas fa-file-pdf me-2"></i> Invoice (Approved Only)
                    </button>
                }

                <a asp-action="AllClaims" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i> Back to All Claims
                </a>
            </div>
        </div>
    </div>
</div>