@model IEnumerable<CMCS_PROG6212_POE.Models.ClaimModel>
@{
    ViewData["Title"] = "HR Dashboard";
}



<!-- Hero Section — Clean & Focused -->
<div class="text-center mb-5 py-5 bg-gradient-primary text-white rounded-4 shadow-lg">
    <h1 class="display-4 fw-bold">
        <i class="fas fa-tachometer-alt me-3"></i> HR Dashboard
    </h1>
    <p class="lead">Manage Lecturers • Monitor Claims • Issue Individual Payment Invoices</p>

    <div class="mt-4">
        <a asp-action="AddLecturer" class="btn btn-light btn-lg mx-2 shadow">
            <i class="fas fa-users-cog me-1"></i> Add Lecturers
        </a>
        <a asp-action="Lecturers" class="btn btn-light btn-lg mx-2 shadow">
            <i class="fas fa-users me-2"></i> Manage Lecturers
        </a>
        <a asp-action="AllClaims" class="btn btn-light btn-lg mx-2 shadow">
            <i class="fas fa-list-alt me-2"></i> View Claims
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-white bg-primary">
            <div class="card-body text-center py-4">
                <i class="fas fa-users fa-3x mb-3 opacity-75"></i>
                <h5>Lecturers</h5>
                <h2 class="display-5 fw-bold">@ViewBag.TotalLecturers</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-white bg-success">
            <div class="card-body text-center py-4">
                <i class="fas fa-check-circle fa-3x mb-3 opacity-75"></i>
                <h5>Approved</h5>
                <h2 class="display-5 fw-bold">@ViewBag.ApprovedClaims</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-white bg-warning">
            <div class="card-body text-center py-4">
                <i class="fas fa-clock fa-3x mb-3 opacity-75"></i>
                <h5>Pending</h5>
                <h2 class="display-5 fw-bold">@ViewBag.PendingClaims</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-white bg-info">
            <div class="card-body text-center py-4">
                <i class="fas fa-file-invoice-dollar fa-3x mb-3 opacity-75"></i>
                <h5>Total Claims</h5>
                <h2 class="display-5 fw-bold">@ViewBag.TotalClaims</h2>
            </div>
        </div>
    </div>
</div>

<!-- Recent Claims with View Report Button -->
<div class="card shadow-lg border-0">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fas fa-history me-2"></i> Recent Claims
        </h4>
        <div>
            <a asp-action="AllClaims" class="btn btn-light btn-sm me-2">View All Claims</a>
            <a asp-action="PaymentReport" class="btn btn-success btn-sm">
                <i class="fas fa-file-invoice-dollar me-2"></i> Payment Report
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th class="text-center">Invoice</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Take(8))
                        {
                            var badge = c.Status == "Approved" ? "bg-success" :
                            c.Status == "Pending" ? "bg-warning text-dark" :
                            c.Status == "Verified" ? "bg-info" : "bg-danger";

                            <tr>
                                <td><strong>@c.User.FirstName @c.User.LastName</strong></td>
                                <td class="text-center">@c.HoursWorked</td>
                                <td class="text-success fw-bold">R @c.TotalAmount</td>
                                <td><span class="badge @badge px-3 py-2">@c.Status</span></td>
                                <td>@c.SubmittedDate.ToString("dd MMM yyyy")</td>
                                <td class="text-center">
                                    @if (c.Status == "Approved")
                                    {
                                        <a asp-action="DownloadClaimInvoice"
                                           asp-route-claimId="@c.ClaimId"
                                           class="btn btn-danger btn-sm">
                                            <i class="fas fa-file-pdf"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-inbox fa-4x mb-3"></i>
                <h5>No claims yet</h5>
            </div>
        }
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>