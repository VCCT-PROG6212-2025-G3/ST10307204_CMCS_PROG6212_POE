@model CMCS_PROG6212_POE.Models.LecturerModel
@{
    ViewData["Title"] = "Lecturer Details";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0 overflow-hidden">
            <div class="card-header bg-primary text-white text-center py-5">
                <h2 class="mb-0">
                    <i class="fas fa-user-tie fa-2x"></i><br><br>
                    @Model.User.FirstName @Model.User.LastName
                </h2>
                <p class="lead mb-0 mt-3">Lecturer Profile</p>
            </div>

            <div class="card-body p-5">
                <div class="row g-4">
                    <div class="col-md-6">
                        <h5><i class="fas fa-id-card text-primary me-2"></i> Personal Info</h5>
                        <hr>
                        <p><strong>Full Name:</strong> @Model.User.FirstName @Model.User.LastName</p>
                        <p><strong>Email:</strong> <a href="mailto:@Model.User.Email">@Model.User.Email</a></p>
                        <p><strong>Role:</strong> <span class="badge bg-success fs-6">Lecturer</span></p>
                    </div>

                    <div class="col-md-6">
                        <h5><i class="fas fa-money-bill-wave text-success me-2"></i> Payment Details</h5>
                        <hr>
                        <p>
                            <strong>Hourly Rate:</strong>
                            <span class="fs-4 text-success fw-bold">R @Model.HourlyRate.ToString("N2")</span>
                        </p>
                    </div>
                </div>

                <hr class="my-5">

                <div class="text-center">
                    <a asp-action="EditLecturer" asp-route-id="@Model.UserId"
                       class="btn btn-warning btn-lg px-5 me-3">
                        <i class="fas fa-edit me-2"></i> Edit Lecturer
                    </a>
                    <a asp-action="Lecturers" class="btn btn-secondary btn-lg px-5">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>