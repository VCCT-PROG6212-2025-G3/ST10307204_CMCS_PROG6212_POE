<!-- Views/Account/Login.cshtml -->
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">CMCS Login</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" name="email" class="form-control" placeholder="hr@cmcs.com" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <hr />
                    <div class="text-center">
                        <small class="text-muted">
                            <strong>Demo Accounts:</strong><br />
                            HR: hr@cmcs.com / hr123<br />
                            Lecturer: john@cmcs.com / lec123<br />
                            Coordinator: sarah@cmcs.com / coord123<br />
                            Manager: mike@cmcs.com / mgr123
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>