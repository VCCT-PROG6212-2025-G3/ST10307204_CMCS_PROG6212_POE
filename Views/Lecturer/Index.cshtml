@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="text-center py-5">
    <h1 class="display-5 fw-bold text-primary mb-4">
        <i class="fas fa-chalkboard-teacher me-3"></i>Welcome, @Context.Session.GetString("FullName")!
    </h1>
    <p class="lead text-muted">Manage and track your monthly claims with ease.</p>
</div>

<div class="row g-4 justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 h-100 text-center hover-lift">
            <div class="card-body p-5">
                <i class="fas fa-file-invoice-dollar text-success fa-4x mb-4"></i>
                <h4>Submit New Claim</h4>
                <p class="text-muted">Create a new claim with drag & drop document upload</p>
                <a asp-action="SubmitClaim" class="btn btn-success btn-lg mt-3">
                    <i class="fas fa-plus-circle me-2"></i> New Claim
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card shadow-lg border-0 h-100 text-center hover-lift">
            <div class="card-body p-5">
                <i class="fas fa-list-alt text-info fa-4x mb-4"></i>
                <h4>My Claims</h4>
                <p class="text-muted">View all your submitted claims and their status</p>
                <a asp-action="TrackClaim" class="btn btn-info btn-lg mt-3">
                    <i class="fas fa-eye me-2"></i> View Claims
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .hover-lift:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
        }
</style>