@model List<CMCS_PROG6212_POE.Models.ClaimModel>

@{
    ViewData["Title"] = "Coordinator Dashboard";
    ViewBag.Role = "Coordinator";
}

<div class="text-center mb-5">
    <h1 class="display-5 fw-bold text-info">
        <i class="fas fa-users-cog me-3"></i> Coordinator Verification Hub
    </h1>
    <p class="lead">Review and verify pending claims before they go to the Manager</p>
</div>

<div class="card shadow-lg border-0">
    <div class="card-header bg-info text-white text-center py-4">
        <h3 class="mb-0"><i class="fas fa-clipboard-check me-3"></i> Claims Awaiting Verification (@Model.Count)</h3>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-check-double fa-5x text-success"></i>
                <h4 class="mt-3">All caught up!</h4>
                <p>No claims pending verification</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Hours</th>
                            <th>Total</th>
                            <th>Submitted</th>
                            <th>Documents</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr class="claim-row" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#claimModal" data-claim-id="@c.ClaimId">
                                <td><strong>#@c.ClaimId</strong></td>
                                <td>
                                    <div>@c.User.FirstName @c.User.LastName</div>
                                    <small class="text-muted">@c.User.Email</small>
                                </td>
                                <td>@c.HoursWorked h</td>
                                <td><strong>R @c.TotalAmount.ToString("N2")</strong></td>
                                <td>@c.SubmittedDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="badge bg-@(c.Documents.Any() ? "success" : "secondary")">
                                        @c.Documents.Count <i class="fas fa-paperclip"></i>
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-warning text-dark">Pending</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="claimModal" tabindex="-1" aria-labelledby="claimModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="claimModalLabel">Claim Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="claimModalBody">
                <p class="text-center">Loading claim details...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const claimModal = document.getElementById('claimModal');
        claimModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const claimId = button.getAttribute('data-claim-id');
            const modalBody = document.getElementById('claimModalBody');

            modalBody.innerHTML = "<p class='text-center'>Fetching details...</p>";

            fetch(`@Url.Action("GetClaimDetails", "Coordinator")?id=${claimId}`)
                .then(res => res.text())
                .then(html => modalBody.innerHTML = html)
                .catch(err => modalBody.innerHTML = `<div class="alert alert-danger">Error loading claim: ${err}</div>`);
        });
    </script>
}
