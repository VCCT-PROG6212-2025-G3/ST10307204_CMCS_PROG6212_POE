@model List<ClaimModel>
@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="card shadow-sm" style="border-left: 5px solid #17a2b8; background: linear-gradient(to right, rgba(255, 255, 255, 0.9), rgba(23, 162, 184, 0.05));">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center" style="border-bottom: 2px dashed rgba(255, 255, 255, 0.3);">
        <h2 class="mb-0"><i class="fas fa-users-cog me-2"></i> Coordinator Hub</h2>
        <span class="badge bg-light text-dark">@Model.Count Pending</span>
    </div>
    <div class="card-body">
        <p class="text-muted mb-4">As a Coordinator, review and verify claims before they proceed to the Manager. Ensure all details and documents are accurate.</p>
        <!-- Search Bar -->
        <div class="input-group mb-4 shadow-sm" style="background: rgba(23, 162, 184, 0.05); border-radius: 10px;">
            <input type="search" id="searchInput" class="form-control rounded-start-pill" placeholder="Search claims by lecturer..." style="background: none; border: none;" onkeyup="filterClaims()">
            <button class="btn btn-outline-info rounded-end-pill" type="button" style="border-color: #17a2b8;">
                <i class="fas fa-filter"></i> Filter
            </button>
        </div>

        <!-- Claims Table -->
        <div class="table-responsive">
            <table class="table align-middle table-hover shadow-sm" id="claimsTable">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Hours</th>
                        <th>Amount</th>
                        <th>Submitted</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.Lecturer.FirstName @claim.Lecturer.LastName <br><small class="text-muted">@claim.Lecturer.Email</small></td>
                            <td>@claim.HoursWorked</td>
                            <td>$@(claim.HoursWorked* claim.HourlyRate)</td>
                            <td><span class="badge bg-warning text-dark px-3 py-2">@claim.Status</span></td>
                            <td class="text-center">
                                <form asp-action="Index" method="post">
                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                    <div class="btn-group">
                                        <button type="submit" name="action" value="Verify" class="btn btn-success btn-sm rounded-pill px-3"><i class="fas fa-check"></i></button>
                                        <button type="submit" name="action" value="Reject" class="btn btn-danger btn-sm rounded-pill px-3"><i class="fas fa-times"></i></button>
                                        <button type="submit" name="action" value="View" class="btn btn-info btn-sm rounded-pill px-3"><i class="fas fa-eye"></i></button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Pagination">
            <ul class="pagination justify-content-center" style="border-top: 1px solid #17a2b8;">
                <li class="page-item disabled"><a class="page-link" href="#" style="color: #17a2b8;">Previous</a></li>
                <li class="page-item active"><a class="page-link" href="#" style="background: #17a2b8; border-color: #17a2b8;">1</a></li>
                <li class="page-item"><a class="page-link" href="#" style="color: #17a2b8;">Next</a></li>
            </ul>
        </nav>
    </div>
</div>

<script>
    function filterClaims() {
        var input = document.getElementById("searchInput").value.toLowerCase();
        var table = document.getElementById("claimsTable");
        var tr = table.getElementsByTagName("tr");

        for (var i = 1; i < tr.length; i++) {
            var td = tr[i].getElementsByTagName("td")[1]; // Lecturer column
            if (td) {
                var text = td.textContent || td.innerText;
                tr[i].style.display = text.toLowerCase().indexOf(input) > -1 ? "" : "none";
            }
        }
    }
</script>